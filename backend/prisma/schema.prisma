    leadId        String
    integrationId String
    platform      IntegrationPlatform
    externalId    String? // Platform's lead ID
    campaignId    String?
    campaignName  String?
    adGroupId     String?
    adGroupName   String?
    adId          String?
    adName        String?
    cost          Float? // Cost per lead in paise
