    tenantId  String
    date      DateTime
    period    AnalyticsPeriod
    metrics   Json // Stores AnalyticsMetrics
    createdAt DateTime        @default(now())

    tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

